<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_allergen_intolerance"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="16dp"
        android:importantForAccessibility="no"
        android:src="@drawable/celery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/text_dark" />

    <TextView
        android:id="@+id/tv_allergen_intolerance"
        style="@style/FysDarkMediumText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="start"
        android:text="@string/food_allergen_intolerance_celery"
        app:layout_constraintBottom_toBottomOf="@+id/iv_allergen_intolerance"
        app:layout_constraintStart_toEndOf="@+id/iv_allergen_intolerance"
        app:layout_constraintTop_toTopOf="@+id/iv_allergen_intolerance" />

</androidx.constraintlayout.widget.ConstraintLayout>