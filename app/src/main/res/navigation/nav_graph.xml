<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/onboardingVpFragment"
        android:name="com.foodandservice.presentation.ui.onboarding.OnboardingFragment"
        android:label="ViewPagerFragment"
        tools:layout="@layout/fragment_view_pager">
        <action
            android:id="@+id/action_onboardingFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.foodandservice.presentation.ui.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_viewPagerFragment"
            app:destination="@id/onboardingVpFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.foodandservice.presentation.ui.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_smsConfirmFragment"
            app:destination="@id/smsConfirmFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/smsConfirmFragment"
        android:name="com.foodandservice.presentation.ui.sms_confirm.SmsConfirmFragment"
        android:label="SmsConfirmFragment"
        tools:layout="@layout/fragment_sms_confirm">
        <action
            android:id="@+id/action_smsConfirmFragment_to_signupFinishFragment"
            app:destination="@id/signupFinishFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="phone"
            app:argType="string" />
        <action
            android:id="@+id/action_smsConfirmFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/signupFinishFragment"
        android:name="com.foodandservice.presentation.ui.signup_finish.SignUpFinishFragment"
        android:label="SignupFinishFragment"
        tools:layout="@layout/fragment_signup_finish">
        <action
            android:id="@+id/action_signupFinishFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.foodandservice.presentation.ui.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_homeCategoryFilterFragment"
            app:destination="@id/homeCategoryFilterFragment" />
        <action
            android:id="@+id/action_homeFragment_to_restaurantDetailsFragment"
            app:destination="@id/restaurantDetailsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_favouritesFragment"
            app:destination="@id/favouritesFragment" />
        <action
            android:id="@+id/action_homeFragment_to_ordersFragment"
            app:destination="@id/ordersFragment" />
        <action
            android:id="@+id/action_homeFragment_to_bookingsFragment"
            app:destination="@id/bookingsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/tableReservationFragment"
        android:name="com.foodandservice.presentation.ui.table_booking.TableBookingFragment"
        android:label="TableReservationFragment"
        tools:layout="@layout/fragment_table_booking" />
    <fragment
        android:id="@+id/reviewCreateFragment"
        android:name="com.foodandservice.presentation.ui.review_create.ReviewCreateFragment"
        android:label="ReviewCreateFragment"
        tools:layout="@layout/fragment_review_create" />
    <fragment
        android:id="@+id/homeCategoryFilterFragment"
        android:name="com.foodandservice.presentation.ui.home_category_filter.HomeCategoryFilterFragment"
        android:label="HomeCategoryFilterFragment"
        tools:layout="@layout/fragment_home_category_filter">
        <argument
            android:name="category"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/restaurantDetailsFragment"
        android:name="com.foodandservice.presentation.ui.restaurant_details.RestaurantDetailsFragment"
        android:label="RestaurantDetailsFragment"
        tools:layout="@layout/fragment_restaurant_details">
        <action
            android:id="@+id/action_restaurantDetailsFragment_to_tableBookingFragment"
            app:destination="@id/tableReservationFragment" />
        <action
            android:id="@+id/action_restaurantDetailsFragment_to_restaurantExtraDetailsFragment"
            app:destination="@id/restaurantExtraDetailsFragment" />
        <action
            android:id="@+id/action_restaurantDetailsFragment_to_productDetailsFragment"
            app:destination="@id/productDetailsFragment" />
        <action
            android:id="@+id/action_restaurantDetailsFragment_to_restaurantReviewsFragment"
            app:destination="@id/restaurantReviewsFragment" />
    </fragment>
    <fragment
        android:id="@+id/favouritesFragment"
        android:name="com.foodandservice.presentation.ui.favourites.FavouritesFragment"
        android:label="FavouritesFragment"
        tools:layout="@layout/fragment_favourites">
        <action
            android:id="@+id/action_favouritesFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/ordersFragment"
        android:name="com.foodandservice.presentation.ui.order_history.OrderHistoryFragment"
        android:label="OrdersFragment"
        tools:layout="@layout/fragment_order_history">
        <action
            android:id="@+id/action_ordersFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/orderStatusFragment"
        android:name="com.foodandservice.presentation.ui.order_status.OrderStatusFragment"
        android:label="OrderStatusFragment"
        tools:layout="@layout/fragment_order_status" />
    <fragment
        android:id="@+id/applyDiscountFragment"
        android:name="com.foodandservice.presentation.ui.save_discount.SaveDiscountFragment"
        android:label="ApplyDiscountFragment"
        tools:layout="@layout/fragment_save_discount" />
    <fragment
        android:id="@+id/bookingsFragment"
        android:name="com.foodandservice.presentation.ui.bookings.BookingsFragment"
        android:label="BookingsFragment"
        tools:layout="@layout/fragment_bookings" />
    <fragment
        android:id="@+id/userProfileFragment"
        android:name="com.foodandservice.presentation.ui.user_profile.UserProfileFragment"
        android:label="UserProfileFragment"
        tools:layout="@layout/fragment_user_profile">
        <action
            android:id="@+id/action_userProfileFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/restaurantExtraDetailsFragment"
        android:name="com.foodandservice.presentation.ui.restaurant_extra_details.RestaurantExtraDetailsFragment"
        android:label="RestaurantExtraDetailsFragment"
        tools:layout="@layout/fragment_restaurant_extra_details" />
    <fragment
        android:id="@+id/productDetailsFragment"
        android:name="com.foodandservice.presentation.ui.product_details.ProductDetailsFragment"
        android:label="ProductDetailsFragment"
        tools:layout="@layout/fragment_product_details">
        <argument
            android:name="product"
            app:argType="com.foodandservice.domain.model.Product" />
    </fragment>
    <fragment
        android:id="@+id/restaurantReviewsFragment"
        android:name="com.foodandservice.presentation.ui.restaurant_reviews.RestaurantReviewsFragment"
        android:label="RestaurantReviewsFragment"
        tools:layout="@layout/fragment_restaurant_reviews">
        <action
            android:id="@+id/action_restaurantReviewsFragment_to_reviewCreateFragment"
            app:destination="@id/reviewCreateFragment" />
    </fragment>
</navigation>